extends ../main
block content
    div.row
        div.col.col-md-10.col-md-offset-1
            div.panel.panel-default.create-article
                div.panel-body
                    form(action='/Article/create',method='post',role='form').form-horizontal
                        fieldset
                            legend Nouvel article
                            if (typeof(errors) !== 'undefined')
                                div.alert.alert-dismissable.alert-danger
                                    button(type='button',data-dismiss='alert').close x
                                    ul
                                        each error, index in errors.invalidAttributes
                                            li #{index} :
                                                each errorAttributes in error
                                                    p #{errorAttributes.message}
                            div.form-group  
                                label(for='titre').control-label Titre
                                input(type='text',name='Article[title]',value="#{ article ? article.title : '' }",id='titre').form-control
                            div.form-group
                                label(for='contenue').control-label Contenue   
                                textarea(name='Article[content]', id="markdown-editor", rows='10', cols='30').form-control #{ article ? article.content : '' }
                            
                            div.form-group
                                input(type='submit').btn.btn-primary
                    div.modal#wiki-modal
                        div.modal-dialog.modal-sm
                            div.modal-content
                                div.modal-header
                                    h5.modal-title Référence Wikipedia
                                div.modal-body
                                    input(type="search",placeholder="Rechercher un article").form-control#searchRef
                                    div#res-wiki-article
